<form action="/todos/{{ todo._id }}?_method=PUT" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="isDone" {{#if isDone}} checked {{/if}}>
      </div>
    </div>
    <input class="form-control" type="text" placeholder="name" name="name" value="{{ todo.name }}">
    <div class="input-group-append">
      <button type="submit" class="btn btn-success">save</button>
    </div>
  </div>
</form>